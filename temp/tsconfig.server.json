{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "es2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "./",
    "sourceMap": false,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "stripInternal": true,
    "incremental": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./imports/lib/*"]
    }
  },
  "include": [
    "server/**/*",
    "tests-ts/**/*",
    "server.eslintrc.js",
    "config/config.js",
    "imports/lib/constants/constants.js",
    "imports/lib/DTO/**/*",
    "scripts/facilities-bulk-upload/start-bulk-upload.ts",
    "scripts/facilities-bulk-upload/generate-facility-bulk-upload-sheet.ts",
    "scripts/facilities-state-codes/migrate-facilities-state-codes.ts",
    "scripts/knock-user-identification/knock-user-bulk-identification.ts",
    "imports/lib/validators"
  ],
  "exclude": ["node_modules"]
}
